#!/bin/bash -e

psql -v ON_ERROR_STOP=1 --username "$POSTGRES_USER" --dbname "$POSTGRES_DB" <<-EOSQL
    CREATE USER {{ cms_dbuser }} WITH PASSWORD '{{ cms_dbpass }}';
    CREATE DATABASE {{ cms_dbname }};
EOSQL

psql -v ON_ERROR_STOP=1 --username "$POSTGRES_USER" --dbname '{{ cms_dbname }}' <<-EOSQL
    ALTER SCHEMA public OWNER TO {{ cms_dbuser }};
    GRANT SELECT ON pg_largeobject TO {{ cms_dbuser }}
EOSQL

